
<script type="text/javascript">
$(function(){
	getSuggestContent();
})

function getSuggestContent(){
	$.ajax({
		url:"getSuggestByArticleId",
		data:{articleId:$("#detail_article_Id").val()},
		dataType:"html",
		success:function(msg){
			$("#suggestContentdivId").html(msg);
		}
	})
}
function sendSuggest(){
var name = $("#nameId").val();
if(name.length>10 ){ $("#nameId").focus();$("#nameIdspan").text("不能大于10个字符");return;}
var email = $("#emailId").val();
var content = $("#contentId").val();
	if(content.length<2 || content == ""){ 
		$("#nameIdspan").text('');
		$("#contentIdspan").text('');
		$("#contentId").focus();$("#contentIdspan").text("不能小于2个字符或者不能为空");
		return;
	}
	$.ajax({
		type:"post",
		url:"saveSuggest",
		data:{articleId:$("#detail_article_Id").val(),name:name,email:email,content:content},
		dataType:"text",
		success:function(msg){
			if(msg=="ok"){
				$("#nameId").val('');
				$("#emailId").val('');
				$("#contentId").val('');
				$("#nameIdspan").text('');
				$("#contentIdspan").text('');
				getSuggestContent();
			}else{
				$("#nameIdspan").text('');
				$("#contentIdspan").text('');
				alert("服务器异常，请稍后再试！")
			}
			
		}
	})

}
</script>

